<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- ðŸš« Emoji -->
        <TextView
            android:id="@+id/emoji_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸš«"
            android:textSize="100sp"
            android:paddingBottom="32dp" />

        <!-- App name -->
        <TextView
            android:id="@+id/app_name_blocked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Name is Blocked"
            android:textColor="?attr/colorError"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="20dp" />

        <!-- Focus mode message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This app is blocked during Focus Mode."
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="18sp"
            android:gravity="center"
            android:paddingBottom="8dp" />

        <!-- Motivation text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stay focused on what matters! ðŸ’ª"
            android:textColor="?android:attr/textColorSecondary"
            android:alpha="0.6"
            android:textSize="16sp"
            android:gravity="center"
            android:paddingBottom="40dp" />

        <!-- Divider -->
        <View
            android:layout_width="120dp"
            android:layout_height="4dp"
            android:background="?attr/colorError"
            android:layout_marginBottom="40dp" />

        <!-- Go Home button -->
        <Button
            android:id="@+id/go_home_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Go to Home Screen"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="?attr/colorPrimary" />

        <!-- Spacer -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Turn off Focus Mode hint -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn off Focus Mode in the app to unblock"
            android:textColor="?android:attr/textColorSecondary"
            android:alpha="0.5"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
