<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center_horizontal"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/focusModeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Focus Mode"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#222"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Focus Mode: OFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FF5252"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turn Focus Mode ON"
        android:textSize="18sp"
        android:backgroundTint="#4CAF50"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"
        android:padding="12dp"/>

    <Button
        android:id="@+id/stopButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turn Focus Mode OFF"
        android:textSize="18sp"
        android:backgroundTint="#FF5252"
        android:textColor="@android:color/white"
        android:layout_marginBottom="32dp"
        android:padding="12dp"/>

    <Button
        android:id="@+id/blockedAppsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Blocked Apps"
        android:textSize="18sp"
        android:backgroundTint="#2196F3"
        android:textColor="@android:color/white"
        android:padding="12dp"/>

</LinearLayout>
